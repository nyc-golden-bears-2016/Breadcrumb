<div>
<%if current_user == @page%>
  <%=link_to 'Create Trail', new_trail_path%>
<%else%>
  <%=@page.username.upcase%>'S PROFILE
<%end%>
</div>

<div>
<h5>Created Trails</h5>
<%if @page.created_trails%>
<%@page.created_trails.each do |t|%>
  <div class='each-trail'>
  <%=link_to t.name, t%>
    <%if t.priv%>
      [PRIVATE]<br>
        <%if current_user == t.creator%>
          Password: <%=t.password%><br>
        <%end%>
    <%else%>
      [PUBLIC]<br>
    <%end%>
    <%if (current_user == t.creator) && !t.published%>
      <%=link_to 'Edit/Publish', "/trails/#{t.id}/edit"%>
      <br>
      <%=form_for(t, :html => { :method => :delete }) do |f|%>
        <%= f.submit "Delete Trail" %>
        <%end%>
        <br>
      <%elsif (current_user == t.creator) && t.published%>
        <div>*Published*</div>
        <br>
        <%=form_for(t, :html => { :method => :delete }) do |f|%>
          <%= f.submit "Delete Trail" %>
          <% end %><br>
      <%end%>
     <%end%>
   <%end%>
  </div>
</div>

<div>
<%if @page.favorites %>
  <h5>Saved Trails</h5>
  <%@page.favorites.each do |t|%>
  <div class="each-trail-saved">
    <%=link_to t.trail.name, t.trail%>
    <%if t.trail.priv%>
      [PRIVATE]
      <br>
    <%else%>
      [PUBLIC]
      <br>
    <%end%>
    <%if current_user == @page%>
      <%=link_to "Remove from Saved", "/users/#{current_user.id}/remove/#{t.trail.id}"%>
    <%end%>
  </div>
  <%end%>
<%end%>
</div>

<div>
<%if @page.actives%>
  <h5>Past Trails</h5>
  <%@page.actives.each do |t|%>
  <div class="each-trail-active">
    <%=link_to t.trail.name, t.trail %>
    <%if t.trail.priv%>
      [PRIVATE]
    <%else%>
      [PUBLIC]
    <%end%>
    <%if t.completed%>
      Completed!
    <%end%>
    <%if current_user == @page%>
      <%=form_tag("/actives/#{t.id}", method: "delete") do%>
      <%=submit_tag("Delete from History")%>
      <%end%>
    <%end%>
  </div>
  <%end%>
<%end%>
</div>

<div>
  <%if current_user == @page%>
      <h4>Explore </h4>
        <%@trails.each do |t|%>
        <div class="each-trail-desc">
        <%=link_to t.name, t%>
          <%if t.priv%>
            [PRIVATE]
          <%else%>
            [PUBLIC]
          <%end%>
        by <%=link_to t.creator.username, t.creator%><br>
        <%=t.description%><br><br>
        <%if t.tags%>
        <br>Tags:
          <%t.tags.each do |tag|%>
            <%=tag.subject%>
          <%end%>
        <%end%>
        <br>
        <%end%>
      </div>
      <%end%>
    </div>
